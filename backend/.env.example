# Server Configuration
NODE_ENV=development
PORT=8000
BASE_PATH=/api

# Database
MONGO_URI=mongodb://localhost:27017/flowmatic
# For MongoDB Atlas (cloud):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/flowmatic

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
JWT_EXPIRES_IN=7d

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# Frontend Configuration
FRONTEND_ORIGIN=http://localhost:5173
CLIENT_URL=http://localhost:5173
FRONTEND_GOOGLE_CALLBACK_URL=http://localhost:5173/auth/google/callback

# Session Configuration (if using sessions)
SESSION_SECRET=your-super-secret-session-key-here-make-it-long-and-random
SESSION_EXPIRES_IN=24h

# Email Configuration (Optional - for forgot password, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development
DEBUG=true
